{
  "manifest_version": 2,
  "name": "OddsPortal tennis scraper",
  "description": "OddsPortal tennis events scraper lowering the coefficient 15%",
  "version": "1.0.1",
  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "backgrounds/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.oddsportal.com/*"
      ],
      "css": [
        "styles/styles.css"
      ],
      "js": [
        "filters/bookmakerName.js",
        "filters/droppingBets.js",
        "libs/jquery.js",
        "models/bookmakers.js",
        "models/event-details.js",
        "models/events.js",
        "models/tooltip.js",
        "scripts/tennis-scraper.js",
        "telegram-config.js",
        "utils/error-handler.js",
        "utils/logger.js",
        "utils/script-reloader.js",
        "utils/storage-helper.js",
        "utils/telegram-publisher.js",
        "main.js"
      ]
    }
  ],
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage"
  ]
}